@model ResetPasswordModel
@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Şifre Sıfırlama</h1>
                <nav class="d-flex align-items-center">
                    <a asp-controller="Home" asp-action="Index">Ana Sayfa<span class="lnr lnr-arrow-right"></span></a>
                    <a asp-action="Login">Giriş<span class="lnr lnr-arrow-right"></span></a>
                    <a>Şifre Sıfırlama</a>
                </nav>
            </div>
        </div>
    </div>
</section>

<section class="login_box_area section_gap">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login_form_inner p-5">
                    <h3 class="mb-4">Yeni Şifre Belirleme</h3>
                    <p class="text-muted mb-4">
                        Lütfen yeni şifrenizi belirleyin. Güvenliğiniz için güçlü bir şifre seçmeyi unutmayın.
                    </p>
                    <form asp-action="ResetPassword" method="post" class="row login_form">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input asp-for="Email" type="hidden">
                        <input asp-for="Token" type="hidden">

                        <div class="col-md-12 form-group mb-3">
                            <input asp-for="NewPassword" class="form-control" placeholder="Yeni Şifre" type="password">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group mb-4">
                            <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Yeni Şifre (Tekrar)"
                                type="password">
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group mb-3">
                            <button type="submit" class="primary-btn w-100">Şifremi Değiştir</button>
                        </div>

                        <div class="col-md-12 text-center">
                            <p class="text-muted mb-0">
                                Şifrenizi hatırladınız mı?
                                <a asp-action="Login" class="text-primary">Giriş yapın</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section ScriptsSection {
    <partial name="_ValidationScriptsPartial" />
}

@section StylesSection {
    <style>
        .login_form_inner {
            background: #fff;
            box-shadow: 0px 10px 30px 0px rgba(0, 0, 0, 0.07);
            padding: 50px 70px;
            border-radius: 10px;
        }

        .form-control {
            border-radius: 5px;
            height: 48px;
            padding: 0 20px;
            border: 1px solid #e8e8e8;
        }

        .form-control:focus {
            border-color: #384aeb;
            box-shadow: none;
        }

        .primary-btn {
            height: 48px;
            font-size: 16px;
        }

        .text-primary {
            color: #384aeb !important;
            text-decoration: none;
        }

        .text-primary:hover {
            text-decoration: underline;
        }

        @@media(max - width: 768px) {
            .login_form_inner {
                padding: 30px 20px;
            }
        }
    </style>
}