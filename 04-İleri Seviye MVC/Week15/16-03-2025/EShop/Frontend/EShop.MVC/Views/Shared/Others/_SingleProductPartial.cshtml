@using EShop.MVC.Helpers
@model ProductModel
@{
    var product = Model;
}
<div class="col-lg-3 col-md-6">
    <div class="single-product">
        <div class="product-img">
            <img src="@Url.ApiContent(product.ImageUrl)" alt="@product.Name">
        </div>
        <div class="product-details">
            <div class="product-info">
                <div class="product-name" title="@product.Name">@product.Name</div>
                <div class="product-price">@product.Price.ToString("C2")</div>
            </div>
            <div class="prd-bottom">
                <form id="addToCart_@product.Id" asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@product.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <a class="social-info" style="cursor: pointer;"
                        onclick="document.getElementById('addToCart_@product.Id').submit()">
                        <span class="ti-bag"></span>
                        <p class="hover-text">Sepete Ekle</p>
                    </a>
                    <a href="/Product/Details/@product.Id" class="social-info">
                        <span class="lnr lnr-move"></span>
                        <p class="hover-text">İncele</p>
                    </a>
                </form>

            </div>
        </div>
    </div>
</div>